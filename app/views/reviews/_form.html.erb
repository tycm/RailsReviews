<%= form_with(model: [ @movie, @movie.reviews.build ], local: true) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit :class => 'btn btn-success' %>
  </p>
<% end %>